---
import AppLayout from "@/layouts/AppLayout.astro";
import Sidebar from "@/components/Sidebar";
import PageHeader from "@/components/PageHeader";
import AdminReportsIsland from "@/components/AdminReportsIsland";
---

<AppLayout title="Raporlar - Admin Panel">
  <div class="flex h-screen bg-gray-50">
    <!-- Sidebar -->
    <Sidebar role="admin" client:only="react" />
    
   <!-- Main Content Area -->
    <div class="content-root flex-1 flex flex-col">
      <!-- Page Header -->
      <PageHeader client:only="react">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Raporlar</h1>
          <p class="text-sm text-gray-600 mt-1">Sistem raporlarını görüntüleyin ve analiz edin. Detaylı performans verilerine erişin.</p>
        </div>
      </PageHeader>

      <!-- Main Content Area -->
      <main class="flex-1 overflow-y-auto">
        <AdminReportsIsland client:only="react" />
      </main>
    </div>
  </div>
</AppLayout>