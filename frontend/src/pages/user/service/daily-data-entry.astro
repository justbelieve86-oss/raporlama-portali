---
import AppLayout from '@/layouts/AppLayout.astro';
import Sidebar from '@/components/Sidebar';
import PageHeader from '@/components/PageHeader';
import DailyDataEntryIsland from '@/components/DailyDataEntryIsland';
---
<AppLayout title="Veri Girişi - Günlük">
  <div class="flex h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    <!-- Sidebar -->
    <Sidebar role="user" client:only="react" />

    <!-- Main Content Area -->
    <div class="content-root flex-1 flex flex-col">
      <!-- Page Header -->
      <PageHeader client:only="react">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Veri Girişi - Günlük</h1>
          <p class="text-sm text-gray-600 mt-1">Günlük veri girişi ve takip işlemleri</p>
        </div>
      </PageHeader>

      <!-- Main Content -->
      <main class="flex-1 p-6 space-y-8 overflow-y-auto">
        <!-- Günlük KPI Veri Girişi (Servis kategorisi) -->
        <DailyDataEntryIsland client:only="react" categoryFilter="Servis - Günlük KPI" />
      </main>
    </div>
  </div>
</AppLayout>