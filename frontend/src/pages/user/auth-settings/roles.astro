---
import AppLayout from '@/layouts/AppLayout.astro';
import Sidebar from '@/components/Sidebar';
import PageHeader from '@/components/PageHeader';
import RoleManagement from '@/components/RoleManagement';
---

<AppLayout title="Yetkilendirme Ayarları - Rol Yönetimi">
  <div class="flex h-screen bg-gray-50">
    <!-- Sidebar -->
    <Sidebar role="user" client:only="react" />
    
   <!-- Main Content Area -->
    <div class="content-root flex-1 flex flex-col">
      <!-- Page Header -->
      <PageHeader client:only="react">
        <div class="w-full flex items-start justify-between gap-4 flex-wrap">
          <div>
            <h1 class="text-2xl md:text-3xl font-bold text-gray-900">Rol Yönetimi</h1>
            <p class="text-sm md:text-base text-gray-600 mt-1">Kullanıcı rollerini ve yetkilerini tanımlayın. Sistem erişim kontrollerini yönetin.</p>
          </div>
          <div class="mt-2 md:mt-0">
            <h2 class="text-lg md:text-xl font-semibold text-gray-800">Erişim Matrisi</h2>
          </div>
        </div>
      </PageHeader>

      <!-- Main Content Area -->
      <main class="flex-1 overflow-y-auto p-6">
        <RoleManagement client:only="react" />
      </main>
    </div>
  </div>
</AppLayout>