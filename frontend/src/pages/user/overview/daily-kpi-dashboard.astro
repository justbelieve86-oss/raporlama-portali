---
import AppLayout from '@/layouts/AppLayout.astro';
import Sidebar from '@/components/Sidebar';
import PageHeader from '@/components/PageHeader';
import DailyKpiOverviewIsland from '@/components/DailyKpiOverviewIsland';
import MobileRedirectToDailyKpi from '@/components/MobileRedirectToDailyKpi';
---

<AppLayout title="Günlük KPI Dashboard">
  <!-- Mobil cihazlarda mobil versiyona yönlendirme -->
  <MobileRedirectToDailyKpi client:load />
  
  <div class="flex h-screen bg-gradient-to-br from-gray-50 to-gray-100 transition-colors duration-300">
    <!-- Sidebar -->
    <Sidebar role="user" client:only="react" />

    <!-- Main Content Area -->
    <div class="content-root flex-1 flex flex-col">
      <!-- Page Header -->
      <PageHeader client:only="react">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Günlük KPI Dashboard</h1>
          <p class="text-sm text-gray-600 mt-1">Genel bakış • Günlük KPI</p>
        </div>
      </PageHeader>

      <!-- Main Content (empty) -->
      <main class="flex-1 p-6 space-y-8 overflow-y-auto">
        <!-- Günlük KPI Overview -->
        <DailyKpiOverviewIsland client:only="react" />
      </main>
    </div>
  </div>
 </AppLayout>