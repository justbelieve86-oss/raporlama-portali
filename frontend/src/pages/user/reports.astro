---
import AppLayout from "@/layouts/AppLayout.astro";
import Sidebar from "@/components/Sidebar";
import PageHeader from "@/components/PageHeader";
import UserReportsIsland from "@/components/UserReportsIsland";
---

<AppLayout title="Raporlar">
  <div class="flex h-screen bg-gray-50">
    <!-- Sidebar -->
    <Sidebar role="user" client:only="react" />
    
    <!-- Main Content Area -->
    <div class="content-root flex-1 flex flex-col">
      <!-- Page Header -->
      <PageHeader client:only="react">
        <div>
          <h1 class="text-xl font-semibold text-gray-900">Raporlar</h1>
          <p class="text-sm text-gray-500">Satış raporlarınızı görüntüleyin ve analiz edin</p>
        </div>
      </PageHeader>

      <!-- Main Content Area -->
      <main class="flex-1 overflow-y-auto">
        <UserReportsIsland client:only="react" />
      </main>
    </div>
  </div>
</AppLayout>