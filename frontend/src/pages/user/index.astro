---
import AppLayout from "@/layouts/AppLayout.astro";
import Sidebar from "@/components/Sidebar";
import PageHeader from "@/components/PageHeader";
import UserPageIsland from "@/components/UserPageIsland";
import MobileRedirect from "@/components/MobileRedirect";
---

<AppLayout title="Ana Sayfa">
  <MobileRedirect client:load />
  <div class="flex h-screen bg-gray-50 transition-colors duration-300">
    <!-- Sidebar -->
    <Sidebar role="user" client:only="react" />
    
    <!-- Main Content Area -->
    <div class="content-root flex-1 flex flex-col">
      <!-- Page Header -->
      <PageHeader client:only="react">
        <div>
          <h1 class="text-xl font-semibold text-gray-900">Ana Sayfa</h1>
          <p class="text-sm text-gray-500">Hoş geldiniz! Genel bakış ve hızlı erişim</p>
        </div>
      </PageHeader>

      <!-- Main Content Area -->
      <main class="flex-1 overflow-y-auto">
        <UserPageIsland client:only="react" />
      </main>
    </div>
  </div>
</AppLayout>